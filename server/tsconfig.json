{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",          
    "module": "commonjs",

    /* Modules & Project Layout */
    "rootDir": "./src",         
    "outDir": "./dist",          

    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

 
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
